<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Favicons -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles.css">
  
  <title>Analytics Dashboard - TinyApp</title>
</head>
<body>
  <%- include('partials/_header') %>
  
  <div class="container fade-in-up">
    <div class="hero">
      <h1><i class="fas fa-chart-line me-3"></i>Analytics Dashboard</h1>
      <p>Track your URL performance and engagement metrics</p>
    </div>

    <!-- Overview Stats -->
    <div class="stats-grid">
      <div class="stat-card">
        <span class="stat-number"><%= totalUrls %></span>
        <div class="stat-label">Total URLs</div>
      </div>
      <div class="stat-card">
        <span class="stat-number"><%= totalClicks %></span>
        <div class="stat-label">Total Clicks</div>
      </div>
      <div class="stat-card">
        <span class="stat-number"><%= avgClicks %></span>
        <div class="stat-label">Avg. Clicks per URL</div>
      </div>
      <div class="stat-card">
        <span class="stat-number"><%= userUrls.filter(u => u.clicks > 0).length %></span>
        <div class="stat-label">Active URLs</div>
      </div>
    </div>

    <!-- Performance Chart -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">
              <i class="fas fa-chart-bar me-2"></i>URL Performance
            </h5>
          </div>
          <div class="card-body">
            <canvas id="performanceChart" height="100"></canvas>
          </div>
        </div>
      </div>
    </div>

    <!-- Top Performing URLs -->
    <div class="row">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
              <i class="fas fa-trophy me-2"></i>Top Performing URLs
            </h5>
            <span class="badge bg-primary">Top <%= Math.min(5, userUrls.length) %></span>
          </div>
          <div class="card-body">
            <% if (userUrls.length === 0) { %>
              <div class="text-center py-5">
                <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                <h6>No URLs created yet</h6>
                <p class="text-muted">Create your first URL to see analytics</p>
                <a href="/urls/new" class="btn btn-primary">
                  <i class="fas fa-plus me-2"></i>Create URL
                </a>
              </div>
            <% } else { %>
              <% userUrls.slice(0, 5).forEach(function(urlData, index) { %>
                <div class="d-flex align-items-center mb-3 pb-3 <%= index < 4 ? 'border-bottom' : '' %>">
                  <div class="me-3">
                    <span class="badge bg-primary rounded-pill"><%= index + 1 %></span>
                  </div>
                  <div class="flex-grow-1">
                    <div class="d-flex justify-content-between align-items-start">
                      <div>
                        <a href="<%= baseURL %>/u/<%= urlData.shortURL %>" class="text-decoration-none fw-bold" target="_blank">
                          <%= baseURL.replace('http://', '').replace('https://', '') %>/u/<%= urlData.shortURL %>
                        </a>
                        <div class="text-muted small">
                          <i class="fas fa-globe me-1"></i>
                          <%= urlData.longURL.length > 50 ? urlData.longURL.substring(0, 50) + '...' : urlData.longURL %>
                        </div>
                        <div class="text-muted small">
                          <i class="fas fa-calendar me-1"></i>
                          Created <%= urlData.createdAt %>
                        </div>
                      </div>
                      <div class="text-end">
                        <div class="h4 text-primary mb-0"><%= urlData.clicks %></div>
                        <small class="text-muted">clicks</small>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } %>
          </div>
        </div>
      </div>
      
      <!-- Recent Activity -->
      <div class="col-lg-4">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">
              <i class="fas fa-clock me-2"></i>Recent Activity
            </h5>
          </div>
          <div class="card-body">
            <% 
              let recentClicks = [];
              userUrls.forEach(url => {
                if (url.clickHistory && url.clickHistory.length > 0) {
                  url.clickHistory.slice(-10).forEach(click => {
                    recentClicks.push({
                      shortURL: url.shortURL,
                      timestamp: click.timestamp,
                      ip: click.ip
                    });
                  });
                }
              });
              recentClicks.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));
              recentClicks = recentClicks.slice(0, 10);
            %>
            
            <% if (recentClicks.length === 0) { %>
              <div class="text-center py-4">
                <i class="fas fa-clock fa-2x text-muted mb-2"></i>
                <p class="text-muted">No recent activity</p>
              </div>
            <% } else { %>
              <% recentClicks.forEach(function(click, index) { %>
                <div class="d-flex align-items-center mb-3 <%= index < recentClicks.length - 1 ? 'border-bottom pb-3' : '' %>">
                  <div class="me-3">
                    <i class="fas fa-mouse-pointer text-primary"></i>
                  </div>
                  <div class="flex-grow-1">
                    <div class="fw-medium">/<%= click.shortURL %></div>
                    <div class="text-muted small">
                      <%= new Date(click.timestamp).toLocaleString() %>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- All URLs Table -->
    <div class="row mt-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
              <i class="fas fa-list me-2"></i>All URLs
            </h5>
            <a href="/urls" class="btn btn-outline-primary btn-sm">
              <i class="fas fa-cog me-1"></i>Manage URLs
            </a>
          </div>
          <div class="card-body">
            <% if (userUrls.length === 0) { %>
              <div class="text-center py-4">
                <p class="text-muted">No URLs created yet</p>
              </div>
            <% } else { %>
              <div class="list-group list-group-flush">
                <% userUrls.forEach(function(urlData, index) { %>
                  <div class="list-group-item url-item" style="animation-delay: <%= index * 0.05 %>s">
                    <div class="d-flex justify-content-between align-items-start">
                      <div class="flex-grow-1 me-3">
                        <a href="<%= baseURL %>/u/<%= urlData.shortURL %>" class="url-short" target="_blank">
                          <%= baseURL.replace('http://', '').replace('https://', '') %>/u/<%= urlData.shortURL %>
                          <i class="fas fa-external-link-alt fa-sm ms-1"></i>
                        </a>
                        <div class="url-long">
                          <i class="fas fa-globe me-1"></i>
                          <%= urlData.longURL %>
                        </div>
                        <div class="url-stats">
                          <div class="stat-item">
                            <i class="fas fa-mouse-pointer"></i>
                            <span><%= urlData.clicks %> clicks</span>
                          </div>
                          <div class="stat-item">
                            <i class="fas fa-calendar"></i>
                            <span>Created <%= urlData.createdAt %></span>
                          </div>
                        </div>
                      </div>
                      <div class="url-actions">
                        <button class="btn btn-sm btn-success copy-btn" onclick="copyToClipboard('<%= baseURL %>/u/<%= urlData.shortURL %>')">
                          <i class="fas fa-copy me-1"></i>Copy
                        </button>
                        <a href="/urls/<%= urlData.shortURL %>" class="btn btn-sm btn-primary">
                          <i class="fas fa-edit me-1"></i>Edit
                        </a>
                      </div>
                    </div>
                  </div>
                <% }); %>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Toast Container -->
  <div class="toast-container" id="toastContainer"></div>

  <!-- Bootstrap 5 JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
  <script>
    // Performance Chart
    const ctx = document.getElementById('performanceChart').getContext('2d');
    const urlData = <%- JSON.stringify(userUrls) %>;
    
    const chart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: urlData.slice(0, 10).map(url => url.shortURL),
        datasets: [{
          label: 'Clicks',
          data: urlData.slice(0, 10).map(url => url.clicks),
          backgroundColor: 'rgba(102, 126, 234, 0.8)',
          borderColor: 'rgba(102, 126, 234, 1)',
          borderWidth: 1,
          borderRadius: 4,
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: {
              color: 'rgba(255, 255, 255, 0.1)'
            },
            ticks: {
              color: '#cbd5e1'
            }
          },
          x: {
            grid: {
              display: false
            },
            ticks: {
              color: '#cbd5e1'
            }
          }
        }
      }
    });

    // Copy to clipboard function
    function copyToClipboard(text) {
      navigator.clipboard.writeText(text).then(function() {
        showToast('URL copied to clipboard!', 'success');
      }).catch(function(err) {
        showToast('Failed to copy URL', 'error');
      });
    }

    // Toast notifications
    function showToast(message, type = 'success') {
      const toastContainer = document.getElementById('toastContainer');
      const toastId = 'toast-' + Date.now();
      
      const toast = document.createElement('div');
      toast.className = `toast toast-${type}`;
      toast.id = toastId;
      toast.setAttribute('role', 'alert');
      toast.innerHTML = `
        <div class="toast-header">
          <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
          <strong class="me-auto">${type === 'success' ? 'Success' : 'Error'}</strong>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
          ${message}
        </div>
      `;
      
      toastContainer.appendChild(toast);
      
      const bsToast = new bootstrap.Toast(toast, {
        autohide: true,
        delay: 3000
      });
      
      bsToast.show();
      
      toast.addEventListener('hidden.bs.toast', function() {
        toast.remove();
      });
    }
  </script>
</body>
</html>