<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/urls">
        <i class="fas fa-link me-2"></i>TinyApp
      </a>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNav">
        <div class="navbar-nav me-auto">
          <% if (user) { %>
            <a class="nav-link" href="/urls">
              <i class="fas fa-list me-1"></i>My URLs
            </a>
            <a class="nav-link" href="/urls/new">
              <i class="fas fa-plus me-1"></i>Create New
            </a>
            <a class="nav-link" href="/dashboard">
              <i class="fas fa-chart-bar me-1"></i>Dashboard
            </a>
          <% } %>
        </div>
        
        <div class="navbar-nav">
          <% if (user) { %>
            <span class="navbar-text me-3">
              <i class="fas fa-user me-1"></i>
              <%= user.email %>
              <% if (user.isGuest) { %>
                <span class="badge bg-warning ms-2" title="Demo session expires in 2 hours">
                  <i class="fas fa-clock me-1"></i>DEMO
                </span>
              <% } %>
            </span>
            <form method="POST" action="/logout" class="d-inline">
              <button type="submit" class="btn btn-outline-light btn-sm">
                <i class="fas fa-sign-out-alt me-1"></i><%= user.isGuest ? 'Exit Demo' : 'Logout' %>
              </button>
            </form>
          <% } else { %>
            <a class="nav-link" href="/login">
              <i class="fas fa-sign-in-alt me-1"></i>Login
            </a>
            <a class="nav-link" href="/register">
              <i class="fas fa-user-plus me-1"></i>Register
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
</header>